	<!-- This section indicates which folders and groups the game elements should
	     be displayed in.  Each item is referenced by its "id" attribute, as
	     given in the <files/> section below.
	  -->
	<display>
		<group name="Levels">
			<item ref="level-base0" />
			<item ref="level-base1" />
			<item ref="level-base2" />

			<item ref="level-castle0" />
			<item ref="level-castle1" />
			<item ref="level-castle2" />

			<item ref="level-cave0" />
			<item ref="level-cave1" />
			<item ref="level-cave2" />

			<item ref="level-comp0" />
			<item ref="level-comp1" />
			<item ref="level-comp2" />

			<item ref="level-forest0" />
			<item ref="level-forest1" />
			<item ref="level-forest2" />

			<item ref="level-lake0" />
			<item ref="level-lake1" />
			<item ref="level-lake2" />

			<item ref="level-shed0" />
