			<item ref="level-shed2" />

			<item ref="level-space0" />
			<item ref="level-space1" />
			<item ref="level-space2" />
		</group>
		<group name="Graphics">
			<item ref="tiles-base" />
			<item ref="tiles-castle" />
			<item ref="tiles-cave" />
