<game title="Secret Agent" xmlns:supp="http://www.shikadi.net/camoto/xml/supp">

	<!-- Some miscellaneous information about the game this file describes -->
	<info>
		<developer>Peder Jungck</developer>
		<publisher>Apogee</publisher>
		<reverser>Frenkel, Levellass and Malvineous</reverser>
	</info>

	<!-- This section indicates which folders and groups the game elements should
	     be displayed in.  Each item is referenced by its "id" attribute, as
	     given in the <files/> section below.
	  -->
	<display>
		<group name="Episode 1">
			<group name="Levels">
				<item ref="lev-1map" />
			</group>
			<group name="Graphics">
				<item ref="tls8-1" />
				<item ref="tls16-1" />
			</group>
			<group name="Full-screen images">
				<item ref="img-apg1" />
				<item ref="img-cdt1" />
				<item ref="img-end1" />
				<item ref="img-ttl1" />
			</group>
		</group>
	</display>

	<files>
		<archive name="sam103.gfx" id="arch-sa-levels" typeMinor="sagent-levels">
			<file id="lev-1map" name="e1map.sal" typeMajor="map" typeMinor="sagent" supp:tiles="tls-1" title="Overhead map"/>
		</archive>

		<file id="tls8-1" name="sam102.gfx" typeMajor="tileset" typeMinor="ccaves-main" filter="xor-sagent-8sprite" title="EGA sprites"/>
		<file id="tls16-1" name="sam103.gfx" typeMajor="tileset" typeMinor="ccaves-main" filter="xor-sagent-16sprite" title="EGA tiles"/>

		<file id="img-apg1" name="sam1.apo" typeMajor="image" typeMinor="pcx-1b4p" title="Apogee logo"/>
		<file id="img-cdt1" name="sam1.crd" typeMajor="image" typeMinor="pcx-1b4p" title="Credits"/>
		<file id="img-end1" name="sam1.end" typeMajor="image" typeMinor="pcx-1b4p" title="Ending"/>
		<file id="img-ttl1" name="sam1.ttl" typeMajor="image" typeMinor="pcx-1b4p" title="Title"/>

		<file id="img-apg2" name="sam2.apo" typeMajor="image" typeMinor="pcx-1b4p" title="Apogee logo"/>
		<file id="img-cdt2" name="sam2.crd" typeMajor="image" typeMinor="pcx-1b4p" title="Credits"/>
		<file id="img-end2" name="sam2.end" typeMajor="image" typeMinor="pcx-1b4p" title="Ending"/>
		<file id="img-ttl2" name="sam2.ttl" typeMajor="image" typeMinor="pcx-1b4p" title="Title"/>

		<file id="img-apg3" name="sam3.apo" typeMajor="image" typeMinor="pcx-1b4p" title="Apogee logo"/>
		<file id="img-cdt3" name="sam3.crd" typeMajor="image" typeMinor="pcx-1b4p" title="Credits"/>
		<file id="img-end3" name="sam3.end" typeMajor="image" typeMinor="pcx-1b4p" title="Ending"/>
		<file id="img-ttl3" name="sam3.ttl" typeMajor="image" typeMinor="pcx-1b4p" title="Title"/>
	</files>

	<commands>
		<command title="Episode 1">sam1</command>
		<command title="Episode 2">sam2</command>
		<command title="Episode 3">sam3</command>
	</commands>

</game>
