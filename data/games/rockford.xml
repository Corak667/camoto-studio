<game title="Rockford" xmlns:supp="http://www.shikadi.net/camoto/xml/supp">

	<!-- Some miscellaneous information about the game this file describes -->
	<info>
		<developer>John Conley</developer>
		<publisher>First Star Software, Inc.</publisher>
		<reverser>Malvineous</reverser>
	</info>

	<!-- This section indicates which folders and groups the game elements should
	     be displayed in.  Each item is referenced by its "id" attribute, as
	     given in the <files/> section below.
	  -->
	<display>
		<group name="Images">
			<item ref="img-title"/>
			<item ref="img-menu"/>
		</group>
		<group name="Animations">
			<item ref="ani-title"/>
			<item ref="ani-body"/>
			<item ref="ani-cook"/>
			<item ref="ani-cowboy"/>
			<item ref="ani-hunter"/>
			<item ref="ani-space"/>
		</group>
		<group name="Tiles">
			<item ref="tls-body"/>
			<item ref="tls-cook"/>
			<item ref="tls-cowboy"/>
			<item ref="tls-hunter"/>
			<item ref="tls-space"/>
		</group>
	</display>

	<files>
		<file id="ani-body"   name="body.car"     typeMajor="image" typeMinor="ega-raw-planar-bgri-fullscreen" title="Body"/>
		<file id="img-body"   name="body.fil"     typeMajor="image" typeMinor="ega-raw-planar-bgri-fullscreen" title="Body"/>
		<file id="ani-cook"   name="cook.car"     typeMajor="image" typeMinor="ega-raw-planar-bgri-fullscreen" title="Cook"/>
		<file id="img-cook"   name="cook.fil"     typeMajor="image" typeMinor="ega-raw-planar-bgri-fullscreen" title="Cook"/>
		<file id="ani-cowboy" name="cowboy.car"   typeMajor="image" typeMinor="ega-raw-planar-bgri-fullscreen" title="Cowboy"/>
		<file id="img-cowboy" name="cowboy.fil"   typeMajor="image" typeMinor="ega-raw-planar-bgri-fullscreen" title="Cowboy"/>
		<file id="ani-hunter" name="hunter.car"   typeMajor="image" typeMinor="ega-raw-planar-bgri-fullscreen" title="Hunter"/>
		<file id="img-hunter" name="hunter.fil"   typeMajor="image" typeMinor="ega-raw-planar-bgri-fullscreen" title="Hunter"/>
		<file id="ani-space"  name="space.car"    typeMajor="image" typeMinor="ega-raw-planar-bgri-fullscreen" title="Space"/>
		<file id="img-space"  name="space.fil"    typeMajor="image" typeMinor="ega-raw-planar-bgri-fullscreen" title="Space"/>

		<file id="img-title"  name="title.fil"    typeMajor="image"  typeMinor="ega-raw-planar-bgri-fullscreen" title="Title"/>
		<file id="ani-title"  name="titleani.fil" typeMajor="image"  typeMinor="ega-raw-planar-bgri-fullscreen" title="Title"/>
		<file id="img-menu"   name="menu.fil"     typeMajor="image"  typeMinor="ega-raw-planar-bgri-fullscreen" title="Menu"/>
	</files>

	<commands>
		<command title="Normal">rockford</command>
	</commands>

</game>
