		<file id="level-base2"   name="base2.pt"   typeMajor="map" typeMinor="ccomic" supp:tiles="tiles-base">Base 3</file>

		<file id="level-castle0" name="castle0.pt" typeMajor="map" typeMinor="ccomic" supp:tiles="tiles-castle">Castle 1</file>
		<file id="level-castle1" name="castle1.pt" typeMajor="map" typeMinor="ccomic" supp:tiles="tiles-castle">Castle 2</file>
		<file id="level-castle2" name="castle2.pt" typeMajor="map" typeMinor="ccomic" supp:tiles="tiles-castle">Castle 3</file>

