<game title="Monster Bash" xmlns:supp="http://www.shikadi.net/camoto/xml/supp">

	<!-- Some miscellaneous information about the game this file describes -->
	<info>
		<developer>Gerald Lindsly</developer>
		<publisher>Apogee</publisher>
		<reverser>Szevvy and Malvineous</reverser>
	</info>

	<!-- This section indicates which folders and groups the game elements should
	     be displayed in.  Each item is referenced by its "id" attribute, as
	     given in the <files/> section below.
	  -->
	<display>

		<group name="Levels">
			<group name="Episode 1">
				<item ref="lev-101-map"/>
			</group>
		</group>

		<group name="Graphics">

			<group name="Tilesets">
				<item ref="tls-101-bg"/>
				<item ref="tls-101-bon"/>
				<item ref="tls-101-fg"/>
			</group>

		</group>

		<group name="Music">
			<item ref="m_apogfnfr"/>
			<item ref="m_bachbash"/>
			<item ref="m_bashdnce"/>
			<item ref="m_cavebash"/>
			<item ref="m_chase"/>
			<item ref="m_cyclops"/>
			<item ref="m_demons"/>
			<item ref="m_fastbash"/>
			<item ref="m_ghouls"/>
			<item ref="m_goodbye"/>
			<item ref="m_haunted"/>
			<item ref="m_johnnys"/>
			<item ref="m_lovebash"/>
			<item ref="m_madnbash"/>
			<item ref="m_main"/>
			<item ref="m_theme"/>
			<item ref="m_vulture"/>
		</group>

	</display>

	<files>
		<archive name="bash1.dat" id="arch-bash1-dat" typeMinor="dat-bash">
			<file id="tls-101-bg" name="bk1.tbg" typeMajor="tileset" typeMinor="bash-bg">E1L1 BG tiles</file>
			<file id="tls-101-fg" name="fg1.tfg" typeMajor="tileset" typeMinor="bash-fg">E1L1 FG tiles</file>
			<file id="tls-101-bon" name="bon1.tbn" typeMajor="tileset" typeMinor="bash-fg">E1L1 BON tiles</file>
			<file id="lev-101-bg" name="lev1.mbg" typeMajor="map" typeMinor="bash-bg">E1L1 BG layer</file>
			<file id="lev-101-fg" name="lev1.mfg" typeMajor="map" typeMinor="bash-fg">E1L1 FG layer</file>
			<file id="lev-101-map" name="lev1.mif" typeMajor="map" typeMinor="bash"
				supp:layer1="lev-101-bg" supp:layer2="lev-101-fg"
				supp:tiles="tls-101-bg" supp:tiles2="tls-101-bon" supp:tiles3="tls-101-fg">Level 1</file>


			<file id="m_apogfnfr" name="apogfnfr.imf" typeMajor="music" typeMinor="imf-idsoftware-type0">apogfnfr</file>
			<file id="m_bachbash" name="bachbash.imf" typeMajor="music" typeMinor="imf-idsoftware-type0">bachbash</file>
			<file id="m_bashdnce" name="bashdnce.imf" typeMajor="music" typeMinor="imf-idsoftware-type0">bashdnce</file>
			<file id="m_cavebash" name="cavebash.imf" typeMajor="music" typeMinor="imf-idsoftware-type0">cavebash</file>
			<file id="m_chase"    name="chase.imf"    typeMajor="music" typeMinor="imf-idsoftware-type0">chase</file>
			<file id="m_cyclops"  name="cyclops.imf"  typeMajor="music" typeMinor="imf-idsoftware-type0">cyclops</file>
			<file id="m_demons"   name="demons.imf"   typeMajor="music" typeMinor="imf-idsoftware-type0">demons</file>
			<file id="m_fastbash" name="fastbash.imf" typeMajor="music" typeMinor="imf-idsoftware-type0">fastbash</file>
			<file id="m_ghouls"   name="ghouls.imf"   typeMajor="music" typeMinor="imf-idsoftware-type0">ghouls</file>
			<file id="m_goodbye"  name="goodbye.imf"  typeMajor="music" typeMinor="imf-idsoftware-type0">goodbye</file>
			<file id="m_haunted"  name="haunted.imf"  typeMajor="music" typeMinor="imf-idsoftware-type0">haunted</file>
			<file id="m_johnnys"  name="johnny's.imf" typeMajor="music" typeMinor="imf-idsoftware-type0">johnny's</file>
			<file id="m_lovebash" name="lovebash.imf" typeMajor="music" typeMinor="imf-idsoftware-type0">lovebash</file>
			<file id="m_madnbash" name="madnbash.imf" typeMajor="music" typeMinor="imf-idsoftware-type0">madnbash</file>
			<file id="m_main"     name="main.imf"     typeMajor="music" typeMinor="imf-idsoftware-type0">Main menu</file>
			<file id="m_theme"    name="theme.imf"    typeMajor="music" typeMinor="imf-idsoftware-type0">Theme</file>
			<file id="m_vulture"  name="vulture.imf"  typeMajor="music" typeMinor="imf-idsoftware-type0">vulture</file>
		</archive>
	</files>

	<commands>
		<command title="Episode 1">
			bash1
		</command>
		<command title="Episode 2">
			bash2
		</command>
		<command title="Episode 3">
			bash3
		</command>
	</commands>

</game>
